$select-field-tip-color = $normal-alpha-5;
$select-field-readonly-color = $dark-alpha-2;

.{$prefix}-select-field-content {
    display: flex;
    align-items: center;
    svg {
        fill: $normal-alpha-4;
    }
}

.{$prefix}-select-field-value {
    flex: 1;

    > * {
        vertical-align: middle;
    }
}

.{$prefix}-select-field-icon svg {
    fill: $normal-alpha-4;
}

.{$prefix}-select-field-placeholder {
    flex: 1;
    max-width: 100%;
    height: 24px;
    line-height: 24px;
    color: $select-field-tip-color;
}

.{$prefix}-select-field-readonly {
    color: $select-field-readonly-color;
}
